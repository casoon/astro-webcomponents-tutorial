---
interface Props {
  id: string;
  title: string;
  description?: string;
}

const { id, title, description } = Astro.props;
---

<div id={id} class="modal" style="display: none;">
  <div class="modal-backdrop"></div>
  <div class="modal-content">
    <h2 id={`${id}-title`}>{title}</h2>
    {description && <p id={`${id}-desc`}>{description}</p>}
    <slot />
    <button data-modal-close class="close-btn">Schliessen</button>
  </div>
</div>

<style>
  .modal {
    position: fixed;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 50;
  }

  .modal-backdrop {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
  }

  .modal-content {
    position: relative;
    background: white;
    border-radius: 12px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    padding: 2rem;
    max-width: 500px;
    width: 90%;
    animation: modal-in 0.2s ease-out;
  }

  @keyframes modal-in {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  h2 {
    margin: 0 0 1rem;
    font-size: 1.5rem;
    font-weight: 600;
  }

  p {
    margin: 0 0 1.5rem;
    color: #6b7280;
  }

  .close-btn {
    margin-top: 1rem;
    padding: 0.5rem 1rem;
    border: none;
    border-radius: 8px;
    background: #e5e7eb;
    cursor: pointer;
    transition: background 0.2s;
  }

  .close-btn:hover {
    background: #d1d5db;
  }
</style>
